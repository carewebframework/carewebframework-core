<window width="500px" closable="true"
	title="${@msg.cwf.shell.about.title}" 
	controller="${@aboutDialogController}">
	<div style="display:flex;flex:1">
		<grid style="border:none">
			<columns css="##{id} th {text-align:center;vertical-align:middle;width:50%}">
				<column>
					<image name="imgIcon" />
				</column>
				<column>
					<label name="lblSource" class="cwf-about-header" />
				</column>
			</columns>
			<rows name="rows" />
		</grid>
	</div>
	<toolbar width="100%" alignment="center">
		<button
			name="btnCustom" visible="false" />
		<button class="flavor:btn-danger"
			name="btnClose"
			label="${@msg.cwf.shell.about.btn.close.label}" width="80px"
			focus="true" />
	</toolbar>
</window>
