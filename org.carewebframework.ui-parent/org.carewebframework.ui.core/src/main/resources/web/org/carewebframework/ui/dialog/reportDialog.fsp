
<window class="flavor:panel-primary"
	controller="org.carewebframework.ui.dialog.ReportDialog">
	<paneview class="cwf_reportdialog" orientation="vertical">
		<pane name="printRoot">
			<cell name="cmpText" />
			<html name="cmpHtml" />
		</pane>
		<pane>
			<toolbar alignment="end" width="100%">
				<button name="btnClose" class="flavor:btn-danger" 
					label="${@msg.cwf.btn.close.label}" width="60px" />
				<button name="btnPrint" 
					visible="false" class="flavor:btn-info" 
					label="${@msg.cwf.btn.print.label}" width="60px" />
			</toolbar>
		</pane>
	</paneview>
	
	<style>
		.cwf_reportdialog {
			height: 100%;
			width: 100%;
		}
		
		.cwf_reportdialog > .fujion_pane:first-child {
			flex: 1;
			overflow: auto;
			max-height: 400px;
			font-family: monospace; 
			white-space: pre;
		}
		
		.cwf_reportdialog .fujion_toolbar {
			border: none;
		}
	</style>
</window>
