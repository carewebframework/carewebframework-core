<page>
	<div controller="${@cwfUserHeaderController}" class="fujion-layout-vertical" 
		height="100%" width="100%">
		<div class="fujion-layout-horizontal" flex="1">
			<label name="userHeader" />
		</div>
		<div class="fujion-layout-horizontal" flex="1">
			<link name="password" label="${@msg.cwf.userheader.password.label}"
				hint="${@msg.cwf.userheader.password.hint}" visible="true" />
			<div flex="1" />
			<link name="lock" label="${@msg.cwf.userheader.lock.label}"
				hint="${@msg.cwf.userheader.lock.hint}" />
			<div width="10px" />
			<link name="logout" label="${@msg.cwf.userheader.logout.label}"
				hint="${@msg.cwf.userheader.logout.hint}" />
		</div>
	</div>
</page>